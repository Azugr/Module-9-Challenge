{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "module": "ESNext",   
    "target": "ES2020",
    "strict": true,               
    "esModuleInterop": true,      
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true         
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


